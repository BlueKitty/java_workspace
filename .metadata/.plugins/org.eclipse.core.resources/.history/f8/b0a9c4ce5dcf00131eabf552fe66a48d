package Coin_Toss;

import java.util.Random;

public class Coin {
	
	private String sideUp;
	
	public Coin() {
	    Random generator = new Random();
	    int sideRand = generator.nextInt(2);
	    if (sideRand == 1) {
	    	sideUp = "heads";
	    } else {
	    	sideUp = "tails";
	    }  
	}
	
	public void toss() {
		Random generator = new Random();
		int tossSide = generator.nextInt(2);
		if (tossSide == 1) {
			sideUp = "heads";
		} else { 
			sideUp = "tails";
		}
	}
	

}
